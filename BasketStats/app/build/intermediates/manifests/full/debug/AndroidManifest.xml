<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.basketstats.basketstats"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/basketball"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.basketstats.basketstats.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.basketstats.basketstats.MainActivity" />
        <activity android:name="com.basketstats.basketstats.RegisterActivity" />
        <activity android:name="com.basketstats.basketstats.statRecord" />
        <activity android:name="com.basketstats.basketstats.LoadActivity" />
        <activity android:name="com.basketstats.basketstats.NewMatch" />
        <activity android:name="com.basketstats.basketstats.NewTeam" />
        <activity android:name="com.basketstats.basketstats.SavedTeam" />
    </application>

</manifest>