<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.basketstats.basketstats.statRecord">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/rectBack1"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="8"
                android:text="台大資工"
                android:textSize="20sp"
                android:id="@+id/button_home_team"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="8"
                android:text="50"
                android:textSize="60sp"
                android:id="@+id/score_home_team"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=":"
                android:textSize="60sp"
                android:id="@+id/score_colon"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="8"
                android:text="35"
                android:textSize="60sp"
                android:id="@+id/score_away_team"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="8"
                android:text="台科大資工"
                android:textSize="20sp"
                android:id="@+id/button_away_team"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/rectBack2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="陳雋"
                android:textSize="20sp"
                android:id="@+id/name_player_status"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:text="10 pts 5 reb 2 ast"
                android:textSize="25sp"
                android:id="@+id/string_player_status"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/rectBack3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="3"
                android:paddingLeft="10sp"
                android:text="李承軒"
                android:textSize="20sp"
                android:id="@+id/name_player_selected"
                />
            <ImageButton
                android:layout_width="70sp"
                android:layout_height="50sp"
                android:gravity="center"
                android:src="@drawable/button_temp_drawable"
                android:id="@+id/button_player_selected"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/rectBack4">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="克駿"
                android:textSize="20sp"
                android:id="@+id/button_player_1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="承軒"
                android:textSize="20sp"
                android:id="@+id/button_player_2"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="昱憲"
                android:textSize="20sp"
                android:id="@+id/button_player_3"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="兆緯"
                android:textSize="20sp"
                android:id="@+id/button_player_4"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="陳雋"
                android:textSize="20sp"
                android:id="@+id/button_player_5"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/rectBack4">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="罰球中"
                android:textSize="20sp"
                android:id="@+id/button_ftm"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="兩分中"
                android:textSize="20sp"
                android:id="@+id/button_2pm"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="三分中"
                android:textSize="20sp"
                android:id="@+id/button_3pm"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/rectBack4">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="罰球不中"
                android:textSize="20sp"
                android:id="@+id/button_fta"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="兩分不中"
                android:textSize="20sp"
                android:id="@+id/button_2pa"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="三分不中"
                android:textSize="20sp"
                android:id="@+id/button_3pa"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/rectBack4">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="籃板"
                android:textSize="20sp"
                android:id="@+id/button_reb"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="助攻"
                android:textSize="20sp"
                android:id="@+id/button_ast"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="犯規"
                android:textSize="20sp"
                android:id="@+id/button_pf"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/rectBack4">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="抄截"
                android:textSize="20sp"
                android:id="@+id/button_stl"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="失誤"
                android:textSize="20sp"
                android:id="@+id/button_to"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="火鍋"
                android:textSize="20sp"
                android:id="@+id/button_bs"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        >
        <ListView android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>