<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_stat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- The main content view -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.basketstats.basketstats.statRecord"
            android:background="#dff6ae">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#3a3737"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:text="台大資工"
                    android:textSize="20sp"
                    android:id="@+id/button_home_team"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:text="0"
                    android:paddingTop="10dp"
                    android:textSize="80sp"
                    android:id="@+id/score_home_team"
                    android:textColor="#ff0000" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text=":"
                    android:textSize="80sp"
                    android:id="@+id/score_colon"
                    android:textColor="#ff0000"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:text="0"
                    android:paddingTop="10dp"
                    android:textSize="80sp"
                    android:id="@+id/score_away_team"
                    android:textColor="#ff0000" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:text="台科大資工"
                    android:textSize="20sp"
                    android:id="@+id/button_away_team"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/rectBack2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="陳雋"
                    android:textSize="20sp"
                    android:id="@+id/name_player_status"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="10 pts 5 reb 2 ast"
                    android:textSize="25sp"
                    android:id="@+id/string_player_status"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#e7e0e0">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:text="李承軒"
                    android:textSize="25sp"
                    android:id="@+id/player_selected"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:text="火鍋"
                    android:textSize="25sp"
                    android:id="@+id/action_selected"
                    />
                <ImageButton
                    android:layout_width="70sp"
                    android:layout_height="50sp"
                    android:gravity="center"
                    android:src="@drawable/ic_add_circle_outline_24dp"
                    android:onClick="ActionSubmit"
                    android:id="@+id/button_player_selected"
                    android:tint="#ed6464"
                    android:background="#e7e0e0"
                    android:adjustViewBounds="false"
                    android:baselineAlignBottom="false"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="克駿"
                    android:textSize="20sp"
                    android:id="@+id/button_player_1"
                    android:background="#588C7E" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="承軒"
                    android:textSize="20sp"
                    android:id="@+id/button_player_2"
                    android:background="#F2E394" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="昱憲"
                    android:textSize="20sp"
                    android:id="@+id/button_player_3"
                    android:background="#F2AE72" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="兆緯"
                    android:textSize="20sp"
                    android:id="@+id/button_player_4"
                    android:background="#D96459" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="陳雋"
                    android:textSize="20sp"
                    android:id="@+id/button_player_5"
                    android:background="#8C4646" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:tag="ftm"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_ftm"
                    android:text="罰球中"
                    android:textSize="20sp"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="兩分中"
                    android:textSize="20sp"
                    android:tag="_2pm"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_2pm"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="三分中"
                    android:textSize="20sp"
                    android:tag="_3pm"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_3pm"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="罰球不中"
                    android:textSize="20sp"
                    android:tag="fta"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_fta"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="兩分不中"
                    android:textSize="20sp"
                    android:tag="_2pa"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_2pa"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="三分不中"
                    android:textSize="20sp"
                    android:tag="_3pa"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_3pa"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="籃板"
                    android:textSize="20sp"
                    android:tag="reb"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_reb"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="助攻"
                    android:textSize="20sp"
                    android:tag="ast"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_ast"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="犯規"
                    android:textSize="20sp"
                    android:tag="pf"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_pf"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="抄截"
                    android:textSize="20sp"
                    android:tag="stl"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_stl"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="失誤"
                    android:textSize="20sp"
                    android:tag="to"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_to"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="火鍋"
                    android:textSize="20sp"
                    android:tag="bs"
                    android:onClick="ActionClicked"
                    android:id="@+id/button_bs"
                    android:background="@drawable/button_drawable"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Play by Play !"
            android:textSize="30sp"
            android:id="@+id/play_by_play"
            />
        <ListView android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/play_by_play"
            android:background="@color/drawerBack"
            />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>